<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/bg_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#555555"
            />

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_agent_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_call_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                />

            <com.easemob.helpdeskdemo.widget.MyChronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            >

            <ImageButton
                android:id="@+id/iv_hangup"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@mipmap/power"
                />

            <ImageButton
                android:id="@+id/iv_answer"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:src="@mipmap/calling"
                >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_controllers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_container"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_switch_camera"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:src="@mipmap/em_switch_camera"
                />

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:src="@mipmap/em_icon_mute_normal"
                />

            <ImageView
                android:id="@+id/iv_speaker"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:src="@mipmap/em_icon_speaker_on"
                />

            <ImageView
                android:id="@+id/iv_localvideo"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:src="@mipmap/em_icon_local_video_on"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>